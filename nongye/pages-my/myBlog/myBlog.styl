.communityBlog
	display flex
	flex-direction column
	width 100%
	height calc(100vh)
	background-color #FFFFFF
	.blogPhotoFather
		width 100%
		height 500rpx
		// margin-bottom 10rpx
		.blogPhoto
			width 100%
			height 500rpx
			.examplePhoto
				width 100%
				height 500rpx
	.userProfile
		display flex
		align-items center
		background-color #FFFFFF
		width 100%
		height 150rpx
		box-sizing border-box
		padding 4% 30rpx
		padding-left 40rpx
		// margin-bottom 2rpx
		.userPhoto
			border-radius 50%
			width 100rpx
			height 100rpx
		.userName
			margin-left 40rpx
	.greyLine
		width 100%
		height 0.5%
		background-color #CCCCCC
	.blogTitleFather
		margin-top 5rpx
		height 70rpx
		width 100%
		background-color #FFFFFF
		.blogTitle
			margin-top 20rpx
			height 50rpx
			width 80%
			margin-left 5%
	.blogContentFather
		width 100%
		background-color #FFFFFF
		display flex
		flex-direction column
		.blogContent
			box-sizing border-box
			padding 4% 20rpx
			background-color #FFFFFF
			font-size var(--font-size-big)
			width 90%
			line-height 300%
			text-indent 10%
	.blogTimeFather
		width 100%
		background-color #FFFFFF
		height 100rpx
		.blogTime
			width 30%
			height 100rpx
			font-size var(--font-size-normal)
			color var(--color-grey)
			
.attention
	height 70rpx
	width 170rpx
	border-radius 35rpx
	background-color #35AE6B
	text-align center
	color #FFFFFF
	margin-right 5%