.agriculturalclassification
	width 100%
	height 100%
	.container
		width 85%
		height 100%
		position relative
		box-shadow 0px 5px 7px #a0a0a0
		border-radius 8rpx
		transition all .2s
		bottom 0rpx
		background #f1f1f1
		&:hover
			position relative
			bottom 10rpx
			box-shadow 0px 5px 10px #777777
		image
			width 100%
			height 100%
			border-radius 8rpx
		.background
			position absolute
			left 50%
			top 50%
			transform translate(-50%,-50%)
			width 100%
			background var(--color-theme)
			opacity .7
			height 30%
		.title
			position absolute
			left 50%
			top 50%
			transform translate(-50%,-50%)
			color white