.communityList
	width 50vw
	height 35vh
	// background-color #0070FB
	.communityList-container
		// box-shadow 0px 3px 6px #ccc
		background-color #FFFFFF
		width 88%
		height 100%
		flex-direction column
		overflow hidden
		border-radius 10rpx
		display flex
		align-items flex-start
		justify-content space-between
		&.skeleton
			color #f1f1f1
			.communityBlockPhoto
				background-color  #f1f1f1
				min-width 100%
				min-height 50%
			.communityTitle
				background #f1f1f1
				border-left 0 !important
				min-width 30%
				margin 0 5%
				margin-bottom 3%
				min-height 10%
			.communityBlockContent
				color #f1f1f1 !important
				background #f1f1f1
				margin 0 5%
				min-width 75%
				min-height 10%
			.communityProfile
				.communityProfilePhoto
					background #f1f1f1
				.communityProfileName
					background #f1f1f1
					color #f1f1f1 !important
				
		.communityBlockPhoto
			width 100%
			// height 280rpx
			height 60%
			border-radius 10rpx
			margin-bottom 3%
		.communityTitle
			font-size var(--font-size-normal)
			// color var(--color-grey)
			padding-left 5%
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 1
			font-weight bold
			word-break break-all
			word-wrap break-word
			margin-bottom 4%
			margin-top 2%
		.communityBlockContent
			// height 75rpx
			// width 90%
			font-size var(--font-size-normal)
			color var(--color-grey)
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 2
			// margin 5% 0
			padding-left 5%
			padding-right 5%
			// padding-bottom 1%
			word-break break-all
			word-wrap break-word
		.communityProfile
			// height 16%
			// width 100%
			box-sizing border-box
			padding 4% 20rpx
			bottom 0
			// position fixed
			.communityProfilePhoto
				height 46rpx
				width 46rpx
				border-radius 50%
				// position fixed
			.communityProfileName
				margin-left 20rpx
				// position fixed
				font-size var(--font-size-normal)
				color var(--color-grey)
				
				
		