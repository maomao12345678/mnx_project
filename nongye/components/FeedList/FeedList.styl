.communityList
	width 45vw
	height 40vh
	// background-color #0070FB 
	.communityList-container
		// box-shadow 0px 3px 6px #ccc
		background-color #FFFFFF
		width 100%
		height 100%
		flex-direction column
		overflow hidden
		border-radius 10rpx
		display flex
		flex-direction column
		justify-content space-between
		&.skeleton
			color #ffffff
			.communityBlockPhoto
				background-color  #ffffff
				min-width 100%
				min-height 50%
			.communityTitle
				background #ffffff
				border-left 0 !important
				// padding-left 5%
				min-width 80%
				min-height 10%
			.communityBlockContent
				color #ffffff !important
				background #ffffff
				padding-left 5%
				min-width 90%
				min-height 20%
		.communityBlockPhoto
			width 100%
			height 73%
			border-radius 10rpx
		.communityTitle
			width 99%
			// height 10%
			font-size var(--font-size-normal)
			// color var(--color-grey)
			font-weight bold
			padding-left 10%
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 1
		.communityBlockContent
			// height 75rpx
			// width 90%
			font-size var(--font-size-normal)
			color var(--color-grey)
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 2
			// margin 5% 0
			padding-left 5%
			padding-right 5%
			// padding-bottom 1%
			word-break break-all
			word-wrap break-word
			margin-bottom 3%
				
				
		