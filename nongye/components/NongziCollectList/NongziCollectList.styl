.communityList
	width 45vw
	height 36vh
	// background-color #0070FB 
	.communityList-container
		box-shadow 0px 3px 6px #ccc
		background-color #FFFFFF
		width 100%
		height 100%
		flex-direction column
		overflow hidden
		border-radius 10rpx
		display flex
		flex-direction column
		justify-content space-between
		&.skeleton
			color #f1f1f1
			.communityBlockPhoto
				background-color  #f1f1f1
				min-width 100%
				min-height 50%
			.communityTitle
				background #f1f1f1
				border-left 0 !important
				// padding-left 5%
				min-width 80%
				margin 0 5%
				min-height 10%
			.communityBlockContent
				color #f1f1f1 !important
				background #f1f1f1
				// padding-left 5%
				margin 0 5%
				min-width 90%
				min-height 20%
			// .communityProfile 
			// 	background-color #f1f1f1
			// 	min-width 100%
			// 	min-height 10%
		.communityBlockPhoto
			width 100%
			height 60%
			border-top-left-radius 10rpx
			border-top-right-radius 10rpx
		.communityTitle
			width 99%
			// height 10%
			font-size var(--font-size-normal)
			// color var(--color-grey)
			padding-left 10%
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 1
		.communityBlockContent
			// height 75rpx
			width 90%
			font-size var(--font-size-normal)
			color var(--color-grey)
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 2
			// margin 5% 0
			padding-left 5%
			padding-right 5%
			// padding-bottom 1%
			word-break break-all
			word-wrap break-word
			margin-bottom 3%
				
				
		