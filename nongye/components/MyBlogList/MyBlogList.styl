.communityList
	width 50vw
	height 40vh
	// background-color #0070FB 
	.communityList-container
		box-shadow 0px 2px 6px -2px #ccc
		background-color #FFFFFF
		width 88%
		height 100%
		flex-direction column
		overflow hidden
		border-radius 20rpx
		&.skeleton
			color #f1f1f1
			.communityBlockPhoto
				background-color  #f1f1f1
				min-width 100%
				min-height 50%
			.communityTitle
				background #f1f1f1
				border-left 0 !important
				padding-left 5%
				min-width 80%
				min-height 10%
			.communityBlockContent
				color #f1f1f1 !important
				background #f1f1f1
				padding-left 5%
				min-width 90%
				min-height 20%
		.communityBlockPhoto
			width 100%
			height 60%
			border-radius 20rpx
		.communityTitle
			margin-top 2%
			font-size var(--font-size-normal)
			// width 90%
		.communityBlockContent
			font-size var(--font-size-normal)
			color var(--color-grey)
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 2
			// margin 5% 0
			padding-left 5%
			padding-right 5%
			// padding-top 2%
			margin-bottom 3%
		.communityProfile
			height 16%
			width 100%
			box-sizing border-box
			padding 4% 20rpx
			.communityProfilePhoto
				height 50rpx
				width 50rpx
				border-radius 50%
			.communityProfileName
				margin-right 10rpx
				font-size var(--font-size-normal)
				color var(--color-grey)
				
				
		